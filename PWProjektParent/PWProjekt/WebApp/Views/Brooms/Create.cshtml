@model Milek_Nowak_Interfaces.IBroom

@{
    ViewData["Title"] = "Create";
}

<h1>Utwórz</h1>

<h4>Miotła</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena</label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Producent</label>
                <select name="ProducerId" class ="form-control" asp-items="ViewBag.Producers"></select>
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HandleMaterial" class="control-label">Materiał styliska</label>
                <select asp-for="HandleMaterial" class="form-control" asp-items="Html.GetEnumSelectList<Milek_Nowak_Core.HandleMaterialType>()"></select>
                <span asp-validation-foHandlenum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FibersMaterial" class="control-label">Materiał aparatu czyszczącego</label>
                <select asp-for="FibersMaterial" class="form-control" asp-items="Html.GetEnumSelectList<Milek_Nowak_Core.FibersMaterialType>()"></select>
                <span asp-validation-foHandlenum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

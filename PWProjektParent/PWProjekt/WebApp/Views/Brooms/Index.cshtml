@model IEnumerable<Barski_Lewandowski_Interfaces.IBroom>

@{
    ViewData["Title"] = "Index";
}

<h1>Miotły</h1>



<p>
    <a asp-action="Create">Dodaj miotłę</a>
    <form method="get" asp-action="Index">
        <div class="form-group">
            <label for="SearchQuery">Wyszukaj:</label>
            <input type="text" id="SearchQuery" name="searchQuery" class="form-control" placeholder="Podaj nazwę" value="@ViewData["SearchQuery"]" />
        </div>
        <button type="submit" class="btn btn-primary">Wyszukaj</button>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Cena
            </th>
            <th>
                Producent
            </th>
            <th>
                Materiał styliska
            </th>
            <th>
                Materiał aparatu czyszczącego
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Price)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HandleMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FibersMaterial)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model Milek_Nowak_Interfaces.IBroom

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Na pewno chesz usunąć tę miotłe?</h3>
<div>
    <h4>Miotła</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Cena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Producent
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producer.Name)
        </dd>
        <dt class = "col-sm-2">
            Materiał styliska
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HandleMaterial)
        </dd>
        <dt class = "col-sm-2">
            Materiał aparatu czyszczącego
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FibersMaterial)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powróć do listy</a>
    </form>
</div>

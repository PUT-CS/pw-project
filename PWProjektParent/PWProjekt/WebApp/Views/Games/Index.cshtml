@model IEnumerable<Milek_Nowak_Interfaces.IGame>

@{
    ViewData["Title"] = "Index";
}

<h1>Games</h1>



<p>
    <a asp-action="Create">Add a game</a>
    <form method="get" asp-action="Index">
        <div class="form-group">
            <label for="SearchQuery">Search:</label>
            <input type="text" id="SearchQuery" name="searchQuery" class="form-control" placeholder="Name" value="@ViewData["SearchQuery"]" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Producer
            </th>
            <th>
                Game Theme
            </th>
            <th>
                Game Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Price)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameTheme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
